<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- 扫描service下的包里面相关的bean -->
    <context:component-scan base-package="com.kang.service" />

    <!--将我们的所有业务类都注入到Spring，可以通过配置或者注解实现
        注解的话只要在ServiceImpl类名上写@Service，属性上写@Autowired
    -->
    <!--BookServiceImpl注入到IOC容器中-->
<!--    <bean id="BookServiceImpl" class="com.kang.service.BookServiceImpl">-->
<!--        <property name="bookMapper" ref="bookMapper"/>-->
<!--    </bean>-->

    <!-- 3.声明式事务配置，配置事务管理器 -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <!-- 注入数据库连接池 -->
        <property name="dataSource" ref="dataSource" />
    </bean>

</beans>